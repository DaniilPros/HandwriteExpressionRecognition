<UserControl
    x:Class="HWRE.UWP.Controls.RecognizerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HWRE.UWP.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Loaded="RecognizerControl_OnLoaded">

    <Grid x:Name="Grid"
          Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border  Grid.Row="1"
                 BorderThickness="3"
                 BorderBrush="White"
                 Height="106">
            <InkCanvas x:Name="InkCanvas"
                       Height="100"/>
        </Border>

        <Button Content="Recognize" Click="OnRecognizeAsync" Grid.Row="0" HorizontalAlignment="Left"/>
        <Button Content="Clear" Click="OnClear" Grid.Row="0" HorizontalAlignment="Right"/>
        <TextBlock x:Name="ResulTextBlock" Grid.Row="0" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
